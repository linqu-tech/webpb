{
    "name": "dev-infa",
    "version": "0.0.1",
    "description": "Infrastructure for development",
    "license": "Apache-2.0",
    "scripts": {
        "cz": "cz",
        "postinstall": "husky install"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "~16.2.1",
        "@commitlint/cz-commitlint": "~16.2.3",
        "commitizen": "~4.2.4",
        "commitlint": "~16.2.3",
        "husky": "~7.0.4"
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    },
    "commitlint": {
        "extends": "@commitlint/config-conventional",
        "rules": {
            "scope-enum": [
                2,
                "always",
                [
                    "aggregation",
                    "lib.commons",
                    "lib.tests",
                    "lib.utilities",
                    "plugin.dump",
                    "plugin.java",
                    "plugin.ts",
                    "proto",
                    "runtime.java",
                    "runtime.processor",
                    "runtime.ts",
                    "sample"
                ]
            ]
        }
    }
}
