{
  "compilerOptions": {
    "allowJs": false,
    "alwaysStrict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "lib": ["DOM", "ES2015"],
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "removeComments": true,
    "strict": true,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "target": "es6",
    "paths": {
      "build": ["./build"]
    },
    "typeRoots": [
      "node_modules/@types",
      "global.d.ts"
    ]
  },
  "include": [
    "build/generated/**/*.ts",
    "src/scripts/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
